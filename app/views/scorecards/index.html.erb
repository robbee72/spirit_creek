<p id="notice"><%= notice %></p>

<h1>Scorecards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scorecards.each do |scorecard| %>
      <tr>
        <td><%= link_to 'Show', scorecard %></td>
        <td><%= link_to 'Edit', edit_scorecard_path(scorecard) %></td>
        <td><%= link_to 'Destroy', scorecard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scorecard', new_scorecard_path %>


<body>
  <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="main-content" class="col-xs-9">
          <!--  main content -->
          <table class="table" summary="Scorecard list">
               <h2>List of Scorecards</h2>
                <tr class="header">
                  <th>Player</th>
                  <%= render 'hole_number_headings' %>
                  <%= render 'list_of_scores' %>
                </tr>  
          </table>
          <%= link_to "New Scorecard", new_scorecard_path %>
          <br />
          <%= link_to "Home", root_path %>
        </div>
     </div>
      <%= yield %>
 
</body>