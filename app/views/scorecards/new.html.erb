<div class="center jumbotron">

<h1>New Scorecard</h1>

  <%= link_to "back to Scorecards listing", scorecards_path %>
  <%= form_for (@scorecard) do |f| %>
      <table>
        <tr>
          <td>Player</td>
          <%= render 'hole_number_headings' %> 
          <%= render 'scores_input' %>
        </tr>  
      </table>
      <td class="form-buttons"><%= f.submit("Publish Card") %></td>
  <% end %>
  <br/>
  <%= link_to "back to Courses listing", courses_path %>  <br/>
</div>